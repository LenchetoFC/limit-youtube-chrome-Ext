{
  "manifest_version": 3,
  "name": "YouTube Regulator: Limit addicting aspects of YouTube",
  "version": "1.0.0",
  "description": "YouTube Regulator removes parts of YouTube that feeds content addiction to help the user use YouTube more reasonably",
  "icons": {
    "48": "/images/icon-logo-ext.png"
  },
  "action": {
    "default_popup": "/html/popup.html",
    "default_icon": "/images/icon-logo-ext.png"
  },
  "author": "lenchetoramirez16@gmail.com",
  "background": {
    "service_worker": "/scripts/service-worker.js"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "webRequest",
    "declarativeNetRequest",
    "notifications"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "js": [
        "/scripts/content.js",
        "/scripts/blockedPage.js"
      ],
      "matches": [
        "*://www.youtube.com/*"
      ],
      "runAt": "document_end"
    }

  ]
}